<Window x:Class="BleakwindBuffet.PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale"
        mc:Ignorable="d"
        Title="Bleakwind Buffet POS"
        Height="600" Width="1400"
        FontSize="24">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Name="Menu">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row="0" Name="BriarheartBurger">Briarheart Burger</Button>
            <Button Grid.Column="0" Grid.Row="1" Name="DoubleDraugr">Double Draugr</Button>
            <Button Grid.Column="0" Grid.Row="2" Name="ThalmorTriple">Thalmor Triple</Button>
            <Button Grid.Column="0" Grid.Row="3" Name="SmokehouseSkeleton">Smokehouse Skeleton</Button>
            <Button Grid.Column="0" Grid.Row="4" Name="GardenOrcOmelette">Garden Orc Omelette</Button>
            <Button Grid.Column="0" Grid.Row="5" Name="ThugsTBone">Thugs T-Bone</Button>

            <Button Grid.Column="1" Grid.Row="0" Name="SailorSoda" Click="SailorSoda_Click">Sailor Soda</Button>
            <Button Grid.Column="1" Grid.Row="1" Name="MarkarthMilk">Markarth Milk</Button>
            <Button Grid.Column="1" Grid.Row="2" Name="AretinoAppleJuice">Aretino Apple Juice</Button>
            <Button Grid.Column="1" Grid.Row="3" Name="CandlehearthCoffee">Candlehearth Coffee</Button>
            <Button Grid.Column="1" Grid.Row="4" Name="WarriorWater">Warrior Water</Button>

            <Button Grid.Column="2" Grid.Row="0" Name="VokunSalad">Vokun Salad</Button>
            <Button Grid.Column="2" Grid.Row="1" Name="FriedMiraak">Fried Miraak</Button>
            <Button Grid.Column="2" Grid.Row="2" Name="MadOtarGrits">Mad Otar Grits</Button>
            <Button Grid.Column="2" Grid.Row="3" Name="DragonbornWaffleFries">Dragonborn Waffle Fries</Button>
        </Grid>

        <StackPanel
            Orientation="Horizontal"
            Grid.Column="1" Grid.Row="1">
            <Button Name="ProcessPayment" IsEnabled="False">Process payment</Button>
            <Button Name="Remove" IsEnabled="False">Remove from order</Button>
        </StackPanel>

        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0" Name="CurrentOrder">
                <ListBoxItem>Some menu item</ListBoxItem>
            </ListBox>

            <UniformGrid Grid.Row="1" Rows="3" Columns="2">
                <Label>Subtotal:</Label>
                <Label Name="Subtotal" HorizontalAlignment="Right">$0.00</Label>

                <Label>Tax:</Label>
                <Label Name="Tax" HorizontalAlignment="Right">$0.00</Label>

                <Label>Total:</Label>
                <Label Name="Total" HorizontalAlignment="Right">$0.00</Label>
            </UniformGrid>
        </Grid>
    </Grid>
</Window>
