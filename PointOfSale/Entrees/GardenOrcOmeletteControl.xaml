<UserControl x:Class="BleakwindBuffet.PointOfSale.Entrees.GardenOrcOmeletteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale.Entrees"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <WrapPanel>
        <Label>Options:</Label>
        <CheckBox IsChecked="{Binding Path=Broccoli}">Broccoli</CheckBox>
        <CheckBox IsChecked="{Binding Path=Mushrooms}">Mushrooms</CheckBox>
        <CheckBox IsChecked="{Binding Path=Tomato}">Tomato</CheckBox>
        <CheckBox IsChecked="{Binding Path=Cheddar}">Cheddar</CheckBox>
    </WrapPanel>
</UserControl>
