<UserControl x:Class="BleakwindBuffet.PointOfSale.SodaFlavorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Label DockPanel.Dock="Left">Soda Flavor:</Label>
        
        <ListBox Grid.Column="1">
            <ListBoxItem>Blackberry</ListBoxItem>
            <ListBoxItem>Cherry</ListBoxItem>
            <ListBoxItem>Grapefruit</ListBoxItem>
            <ListBoxItem>Lemon</ListBoxItem>
            <ListBoxItem>Peach</ListBoxItem>
            <ListBoxItem>Watermelon</ListBoxItem>
        </ListBox>
    </DockPanel>
</UserControl>
