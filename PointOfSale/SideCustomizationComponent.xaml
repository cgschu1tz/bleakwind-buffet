<UserControl x:Class="BleakwindBuffet.PointOfSale.SideCustomizationComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <ListBox DockPanel.Dock="Top" Margin="{StaticResource Margin}">
            <ListBoxItem>Small</ListBoxItem>
            <ListBoxItem>Medium</ListBoxItem>
            <ListBoxItem>Large</ListBoxItem>
        </ListBox>

        <local:AddOrCancelComponent DockPanel.Dock="Bottom"></local:AddOrCancelComponent>
    </DockPanel>
</UserControl>
