<UserControl x:Class="BleakwindBuffet.PointOfSale.OKCancelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Orientation="Horizontal">
        <Button Name="OK" Click="OK_Click">OK</Button>
        <Button Name="Cancel" Click="Cancel_Click">Cancel</Button>
    </StackPanel>
</UserControl>
