<UserControl x:Class="BleakwindBuffet.PointOfSale.Drinks.CandlehearthCoffeeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale"
             xmlns:enums="clr-namespace:BleakwindBuffet.PointOfSale.Enums"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <enums:SizeControl/>

        <WrapPanel>
            <Label>Options:</Label>
            <CheckBox IsChecked="{Binding Path=Ice}">Ice</CheckBox>
            <CheckBox IsChecked="{Binding Path=RoomForCream}">Cream</CheckBox>
            <CheckBox IsChecked="{Binding Path=Decaf}">Decaf</CheckBox>
        </WrapPanel>
    </StackPanel>
</UserControl>
